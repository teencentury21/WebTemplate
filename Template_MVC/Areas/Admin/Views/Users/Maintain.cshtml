
@{
    ViewBag.Title = "User Maintain";
}

<script type="text/javascript">
    new Vue({
        el: '#search',
        data: {
            users: [],
            searchText: $("#input_Search").val()
        },
        created() {
            // alert('Hello');
        },
        mounted() {
            this.fetchUsers();
        },
        methods: {
            fetchUsers() {
                axios.post('/Admin/Users/QueryUser', {
                    input: this.searchText
                })
                .then(response => {
                    this.users = response.data;
                    //debugger;
                })
                .catch(error => {
                    console.log(error);
                });
            }
        }
    });
</script>

<div id="search" class="container tab-pane active">
    <div class="container mt-3">
        <h2>User Management</h2>
        <hr>
        <div class="row mb-3">
            <div class="col-4">
                <input id="input_Search" type="text" class="form-control" placeholder="Search">
            </div>
            <div class="col-2">
                <button class="btn btn-primary" v-on:click="fetchUsers()">Search</button>
            </div>
            <div class="col-6 text-end">
                <button class="btn btn-success">New User</button>
            </div>
        </div>



        <table class="table">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Username</th>
                        <th>User No</th>
                        <th>Email</th>
                        <th>Active</th>
                        <th>Admin</th>
                        <th>Last Login</th>
                        <th>Created Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="user in users" :key="user.user_id">
                        <td>{{ user.user_id }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.userno }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.is_active ? 'Yes' : 'No' }}</td>
                        <td>{{ user.is_admin ? 'Yes' : 'No' }}</td>
                        <td>{{ user.lastlogin }}</td>
                        <td>{{ user.cdt }}</td>
                        <td>
                            <button class="btn btn-primary btn-sm">Edit</button>
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
    </div>
</div>

